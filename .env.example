# =============================================================================
# OpenAI Configuration (for tutorials 01-10)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Azure OpenAI Configuration (for tutorial 01b and Azure-specific examples)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# =============================================================================
# Azure AI Foundry / Agent Service (for tutorials 10+)
# =============================================================================
AZURE_AI_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project
MODEL_DEPLOYMENT_NAME=gpt-4o

# =============================================================================
# Azure AI Search (for tutorial 10 - Azure File Search)
# =============================================================================
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your_search_api_key_here

# =============================================================================
# Azure Application Insights (for telemetry and monitoring)
# =============================================================================
APPLICATIONINSIGHTS_CONNECTION_STRING=your_app_insights_connection_string

# =============================================================================
# MCP Server Configuration (for tutorials 15-19)
# After deploying to Azure Container Apps, set these values
# =============================================================================
MCP_SERVER_URL=https://your-mcp-server.azurecontainerapps.io/mcp
MCP_SERVER_NAME=travel-mcp-server
MCP_SERVER_RG=rg-mcp-servers
MCP_BACKEND_URL=https://your-mcp-server.azurecontainerapps.io

# =============================================================================
# Azure API Management Configuration (for tutorials 18-19)
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
APIM_NAME=your-apim-instance-name
APIM_RESOURCE_GROUP=your-apim-resource-group
APIM_GATEWAY_URL=https://your-apim-instance.azure-api.net
APIM_SUBSCRIPTION_KEY=your-apim-subscription-key

# =============================================================================
# Entra ID / OAuth Configuration (for tutorial 19 - MCP Authentication)
# These are required for JWT-based authentication to MCP servers via APIM
# =============================================================================

# Your Azure AD tenant ID
AZURE_TENANT_ID=your-tenant-id

# MCP Travel API - App Registration for the API (audience)
# This is the Application (client) ID of the app registration representing the MCP API
MCP_API_CLIENT_ID=your-mcp-api-client-id

# MCP Travel Agent - App Registration for the agent client
# This is the Application (client) ID and secret for the agent to acquire tokens
MCP_AGENT_CLIENT_ID=your-mcp-agent-client-id
MCP_AGENT_CLIENT_SECRET=your-mcp-agent-client-secret

# =============================================================================
# Log Analytics / Azure Monitor (for tutorial 19 - observability)
# =============================================================================
LOG_ANALYTICS_WORKSPACE_ID=your-log-analytics-workspace-id
